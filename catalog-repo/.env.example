# Application Settings
APP_NAME=Catalog Service
APP_VERSION=1.0.0
APP_DESCRIPTION=Enterprise catalog service for BT simulation

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/catalog_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
AUTH_SERVICE_URL=http://localhost:8001/api/v1/auth

# External API Configuration
EXTERNAL_API_TIMEOUT=5
EXTERNAL_API_MAX_RETRIES=3

# Redis Cache
REDIS_URL=redis://default:your-redis-password@your-redis-host:port

# RabbitMQ Messaging
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_FILE=logs/audit.log
ERROR_LOG_FILE=logs/error.log
